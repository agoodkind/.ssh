Include ~/.dotfiles/.ssh_config.local

# Read more about SSH config files: <https://linux.die.net/man/5/ssh_config>

# Automatically add keys to the agent and use system keychain
Host *
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_ed25519

Host home
    User agoodkind
    HostName home.goodkind.io

Host router
    User agoodkind
    HostName router.home.goodkind.io

Host vault
    User agoodkind
    HostName vault.home.goodkind.io

Host logs
    User agoodkind
    HostName logs.home.goodkind.io

Host suburban
    User agoodkind
    HostName 128-nj.goodkind.io
    ForwardAgent yes
    LocalForward 10000 localhost:10000

Host mom
    HostName mom.suburban.goodkind.io 
    User julia
    ProxyJump suburban

Host mini
    HostName mini.home.goodkind.io
    User agoodkind

Host jetkvm
    User root
    HostName jetkvm.home.goodkind.io
    ForwardAgent yes
    LocalForward 80 localhost:8080
    LocalForward 443 localhost:8443
    ProxyJump mini

Host berylax
    HostName berylax.mobile.goodkind.io
    User root
    ForwardAgent yes

Host home-assistant
    HostName home-assistant.home.goodkind.io
    User root
    Port 22222

Host pikvm-suburban
    HostName 10.240.0.57
    User agoodkind

Host ansible
    HostName ansible.home.goodkind.io
    User root

Host logstash
    HostName logstash.home.goodkind.io
    User root
    ForwardAgent yes